  keywords = {Climate change,CO2,Drainage,Ecology,Evolutionary Biology,Flooding,Freshwater \& Marine Ecology,imprim{\'e},Methane},
  pages = {35--47},
  file = {Full Text PDF:/home/dangelo/.mozilla/firefox/xy3hpk07.default/zotero/storage/H7MPMS4D/Ballantyne et al. - 2014 - Long-term water table manipulations alter peatland.pdf:application/pdf;Snapshot:/home/dangelo/.mozilla/firefox/xy3hpk07.default/zotero/storage/8CFKM83B/s11273-013-9320-8.html:text/html}
