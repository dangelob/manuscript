  author = {Siegenthaler, {U}. and {Oeschger}, {H}.},
  year = {1987},
  pages = {140--154},
  file = {Siegenthaler et Oeschger - 1987 - Biospheric CO2 emissions during the past 200 years.pdf:/home/dangelo/.mozilla/firefox/xy3hpk07.default/zotero/storage/3AET9U6B/Siegenthaler et Oeschger - 1987 - Biospheric CO2 emissions during the past 200 years.pdf:application/pdf;Snapshot:/home/dangelo/.mozilla/firefox/xy3hpk07.default/zotero/storage/DJC7UAJF/abstract.html:text/html}
